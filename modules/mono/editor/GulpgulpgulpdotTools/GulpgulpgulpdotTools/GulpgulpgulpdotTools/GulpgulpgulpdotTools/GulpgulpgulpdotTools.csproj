<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <ProjectGuid>{27B00618-A6F2-4828-B922-05CAEB08C286}</ProjectGuid>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>12</LangVersion>
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <Nullable>enable</Nullable>
    <!-- The Gulpgulpgulpdot editor uses the Debug Gulpgulpgulpdot API assemblies -->
    <GulpgulpgulpdotApiConfiguration>Debug</GulpgulpgulpdotApiConfiguration>
    <GulpgulpgulpdotSourceRootPath>$(SolutionDir)/../../../../</GulpgulpgulpdotSourceRootPath>
    <GulpgulpgulpdotOutputDataDir>$(GulpgulpgulpdotSourceRootPath)/bin/GulpgulpgulpdotSharp</GulpgulpgulpdotOutputDataDir>
    <GulpgulpgulpdotApiAssembliesDir>$(GulpgulpgulpdotOutputDataDir)/Api/$(GulpgulpgulpdotApiConfiguration)</GulpgulpgulpdotApiAssembliesDir>
    <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <!-- Needed for our source generators to work despite this not being a Gulpgulpgulpdot game project -->
  <PropertyGroup>
    <IsGulpgulpgulpdotToolsProject>true</IsGulpgulpgulpdotToolsProject>
  </PropertyGroup>

  <ItemGroup>
    <CompilerVisibleProperty Include="IsGulpgulpgulpdotToolsProject" />
  </ItemGroup>

  <PropertyGroup Condition=" Exists('$(GulpgulpgulpdotApiAssembliesDir)/GulpgulpgulpdotSharp.dll') ">
    <!-- The project is part of the Gulpgulpgulpdot source tree -->
    <!-- Use the Gulpgulpgulpdot source tree output folder instead of '$(ProjectDir)/bin' -->
    <OutputPath>$(GulpgulpgulpdotOutputDataDir)/Tools</OutputPath>
    <!-- Must not append '$(TargetFramework)' to the output path in this case -->
    <AppendTargetFrameworkToOutputPath>False</AppendTargetFrameworkToOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="JetBrains.Annotations" Version="2019.1.3.0" ExcludeAssets="runtime" PrivateAssets="all" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.11.0" />
    <PackageReference Include="JetBrains.Rider.PathLocator" Version="1.0.12" />
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.0" PrivateAssets="All" />
    <PackageReference Include="Microsoft.VisualStudio.SolutionPersistence" Version="1.0.52" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <Reference Include="GulpgulpgulpdotSharp">
      <HintPath>$(GulpgulpgulpdotApiAssembliesDir)/GulpgulpgulpdotSharp.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="GulpgulpgulpdotSharpEditor">
      <HintPath>$(GulpgulpgulpdotApiAssembliesDir)/GulpgulpgulpdotSharpEditor.dll</HintPath>
      <Private>False</Private>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Gulpgulpgulpdot.NET.Sdk\Gulpgulpgulpdot.SourceGenerators\Gulpgulpgulpdot.SourceGenerators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
    <ProjectReference Include="..\..\..\glue\GulpgulpgulpdotSharp\Gulpgulpgulpdot.SourceGenerators.Internal\Gulpgulpgulpdot.SourceGenerators.Internal.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\GulpgulpgulpdotTools.BuildLogger\GulpgulpgulpdotTools.BuildLogger.csproj" />
    <ProjectReference Include="..\GulpgulpgulpdotTools.IdeMessaging\GulpgulpgulpdotTools.IdeMessaging.csproj" />
    <ProjectReference Include="..\GulpgulpgulpdotTools.ProjectEditor\GulpgulpgulpdotTools.ProjectEditor.csproj" />
    <ProjectReference Include="..\GulpgulpgulpdotTools.Core\GulpgulpgulpdotTools.Core.csproj" />
  </ItemGroup>

</Project>
